@model Braennbollsturnering.Models.Team

@{
    ViewBag.Title = "Team Details";
}

<h2>Team: @Model.Name</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Players.First().Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Players.First().Name)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.Players)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id).ToString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name).ToString()
            </td>
            <td>
                @Html.ActionLink("Update", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Löschen", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>