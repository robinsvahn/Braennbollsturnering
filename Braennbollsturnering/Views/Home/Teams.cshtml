@using System.Threading
@model System.Collections.Generic.IEnumerable<Braennbollsturnering.Models.Team>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Teams</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Players)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        //item.Modified = RemoteSoftwareManagement.Helpers.TimeMethodExtension.TimeAgo(DateTime.Parse(item.Modified));

        <tr>
            <td>
                @Html.ActionLink(@Html.DisplayFor(modelItem => item.Name).ToString(), "Details", new {id = item.Id})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Players.Count)
            </td>
            <td>
                @Html.ActionLink("Update", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Löschen", "Delete", new {id = item.Id})
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Sign your team up!", "Create")
</p>

